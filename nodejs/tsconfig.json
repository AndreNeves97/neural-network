{
  "compilerOptions": {
    "preserveConstEnums": true,
    "outDir": "./dist",
    "target": "ES2019",
    "module": "commonjs" 
  },
  
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority"
  },

  "include": ["src/**/*"],  
  "exclude": ["node_modules", "**/*.spec.ts"]
}